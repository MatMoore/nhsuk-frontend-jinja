{% from 'components/checkboxes/macro.j2' import checkboxes %}
<form>
  {{ checkboxes({
    "idPrefix": "contact",
    "name": "contact",
    "fieldset": {
      "legend": {
        "text": "How would you like to be contacted?",
        "classes": "nhsuk-fieldset__legend--l",
        "isPageHeading": true
      }
    },
    "hint": {
      "text": "Select all options that are relevant to you.",
    },
    "items": [
      {
        "value": "email",
        "text": "Email"
      },
      {
        "value": "phone",
        "text": "Phone"
      },
      {
        "value": "text message",
        "text": "Text message"
      }
    ]
  }) }}
</form>